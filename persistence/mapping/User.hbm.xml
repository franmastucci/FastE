<?xml version="1.0" encoding="UTF-8"?>

<hibernate-mapping package="model">

    <class name="User" table="USER" abstract="true">
        <id name="userName" column="USER_NAME"/>
        <discriminator column= "type" type="string"/>
        
        <property name="pass" not-null="true"/>
        <property name="name" not-null="true"/>
        <property name="email" not-null="true"/>
        <property name="birthday" not-null="true"/>
        
        <subclass name="Customer" discriminator-value="Customer">
		</subclass>
		
		<subclass name="Delivery" discriminator-value="Delivery">
	        <property name="capacity"/>
   		</subclass>
   		
    </class>
    
	<class name="Order" table="CUSTOMER_ORDER">
    	<id name="orderNumber" type="long">
            <column name="orderNumber" sql-type="BIGINT" not-null="true"/>
            <generator class="increment"/>
        </id>

    	<property name="quantity"/>
    	
    	<many-to-one name ="customer" column="customer_user_name" foreign-key="fk_customer_user_name"/>
    	<many-to-one name ="product" column="product_name" foreign-key="fk_product_name"/>
    	<many-to-one name ="state" class="OrderState"/>
    	
    </class>
    
    <class name="DeliverOrder" table="DELIVER">
    	<id name="id" type="long">
    		<column name="id" sql-type="BIGINT" not-null="true"/>
            <generator class="increment"/>
    	</id>
    	
    	<many-to-one name="order" column="order_id" foreign-key="fk_order_id" cascade="save-update"/>
    	<many-to-one name="delivery" column="delivery_user_name" foreign-key="fk_delivery_name" cascade="save-update"/>
    </class>

</hibernate-mapping>