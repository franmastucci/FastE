<?xml version="1.0" encoding="UTF-8"?>

<hibernate-mapping package="model.provider">
	<class name = "Product" table = "PRODUCT">
		<id name = "name" column = "NAME"/>
		
		<property name = "weight"/>
		<many-to-one name = "provider" not-null="true" foreign-key="PROVIDER_CUIL" cascade="save-update"/>
		<many-to-one name = "price" unique="true" not-null="true" foreign-key="PRICE_COD" cascade="save-update"/> 
		<list name="priceStory" inverse="true" cascade="all">
			<key column="value" not-null="true"/>
			<list-index column="PRODUCT_NAME"/>
			<one-to-many class="PriceRecord"/>
		</list>
<!-- 		
 -->	
 </class>
</hibernate-mapping>
