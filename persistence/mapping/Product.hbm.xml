<?xml version="1.0" encoding="UTF-8"?>

<hibernate-mapping package="model">
	<class name = "Product" table = "PRODUCT">
		<id name = "name" column = "NAME"/>
		
		<property name = "weight"/>
		<many-to-one name = "price" unique="true" not-null="true"/> <!-- definir como relacion -->
		<many-to-one name = "provider" unique="true" not-null="true"/> <!-- definir como relacion -->
		<list name="priceStory">
			<key column="value" not-null="true"/>
			<list-index column="productIdx"/>
			<one-to-many class="PriceRecord"/>
		</list>
	</class>
</hibernate-mapping>
